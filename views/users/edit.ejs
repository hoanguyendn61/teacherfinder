<%- include ('../partials/header') %>
<div class="row" style="width: 500px;
  background-color: #F5F5F5;
  position: relative;
  border-radius: 4px;
  right: 35%;
  left: 35%;
  margin-bottom: 20px;">
  <h1 style="text-align: center">Editing: <%= user.username %></h1>
  <div style="width: 90%; margin: 25px auto">
    <form
      action="/users/<%= user._id %>/?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <div class="form-group">
          <i class="fa fa-user" aria-hidden="true"></i>
          <label>First Name:</label>
          <input
            class="form-control"
            type="text"
            name="firstName"
            placeholder="First Name"
            required
            value="<%= user.firstName %>"
          />
        </div>
        <div class="form-group">
          <i class="fa fa-user" aria-hidden="true"></i>
          <label>Last Name:</label>
          <input
            class="form-control"
            type="text"
            name="lastName"
            placeholder="Last Name"
            required
            value="<%= user.lastName %>"
          />
        </div>
        <div class="form-group">
          <i class="fa fa-envelope" aria-hidden="true"></i>
          <label>Email:</label>
          <input
            class="form-control"
            type="email"
            name="email"
            placeholder="john@doe.com"
            required
            value="<%= user.email %>"
          />
        </div>
        <div class="form-group">
          <i class="fa fa-info" aria-hidden="true"></i>
          <label>About me:</label>
          <textarea
            class="form-control"
            name="about"
            placeholder="About me"
            rows="4"
            cols="50"
            style="resize: none"
          >
          <%= user.about %></textarea
          >
        </div>
        <div class="form-group">
          <i class="fa fa-picture-o" aria-hidden="true"></i>
          <label>Current profile picture:</label>
          <% if(user.avatar){ %>
          <img
            src="<%= user.avatar %>"
            alt="Smiley face"
            height="60"
            width="60"
          />
          <% } else { %>
          <img
            src="/assets/default_profile_img.png"
            alt="Smiley face"
            height="60"
            width="60"
          />
          <% } %>
        </div>
        <div class="form-group">
          <i class="fa fa-picture-o" aria-hidden="true"></i>
          <label>New Image?</label>
          <input type="file" id="image" name="image" accept="image/*" />
        </div>
        <div class="form-group text-center" style="margin-top: 2%">
          <button class="btn btn-info">Update</button>
          <a href="/users" class="btn btn-info">Go Back</a>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include ('../partials/footer') %>
