<%- include ('../partials/header') %>
  <style type="text/css">
    .img-choose {
      object-fit: cover;
    }

    .label-choose {
      background-color: #5bc0df;
      color: white;
      padding: 0.5rem;
      font-family: sans-serif;
      border-radius: 0.3rem;
      cursor: pointer;
      margin-top: 1rem;
    }
    .input-choose{
      display: block;
      width: 0;
      height: 0;
    }
  </style>
  <div class="container">
    <div class="row">
      <h1 style="text-align: center">Editing: <%= Teacher.name %>
      </h1>
      <div style="width: 40%; margin: 25px auto">
        <form action="/teachers/<%= Teacher._id %>/?_method=PUT" method="POST" enctype="multipart/form-data">
          <div class="form-group">
            <label>Name:</label>
            <input class="form-control" type="text" name="name" placeholder="Teacher Name" value="<%= Teacher.name %>"
              required />
          </div>
          <div class="form-group">
            <label>Phone:</label>
            <input class="form-control" type="text" name="phone" placeholder="Phone" value="<%= Teacher.phone %>"
              required />
          </div>
          <div class="form-group">
            <label>Email:</label>
            <input class="form-control" type="text" name="email" placeholder="Email" value="<%= Teacher.email %>"
              required />
          </div>
          <div class="form-group">
            <label>Current Image</label>
            <!--<input class="form-control" disabled type="text" name="" placeholder="Teacher Image" value="<%= Teacher.image %>">-->
            <img src="<%= Teacher.image %>" alt="Smiley face" height="200" width="200" class="img-choose" />
          </div>
          <div class="form-group">
            <label class = "label-choose" for="image">New Image?</label>
            <input class="input-choose" type="file" id="image" name="image" accept="image/*" />
          </div>
          <div class="form-group">
            <label>Certificates:</label>
            <select multiple class="form-control" name="certs">
              <option>TOEIC</option>
              <option>IELTS</option>
              <option>TOEFL</option>
              <option>SAT</option>
              <option>CEFR</option>
              <option>Cambridge ESOL</option>
              <option>Other</option>
            </select>
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" name="description" placeholder="Description" rows="4" cols="50"
              style="resize: none">
        <%= Teacher.description %></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-large btn-info btn-block">Submit!</button>
          </div>
        </form>
        <a href="/teachers">Go back</a>
      </div>
    </div>
  </div>

  <%- include ('../partials/footer') %>